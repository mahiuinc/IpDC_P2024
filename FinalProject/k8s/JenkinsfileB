pipeline {
    agent any
        stages {
            stage ('Greeting') {
                steps {
                    echo 'We are starting this build !!'
                }
            }

            stage ('Confirmation'){
                steps {
                    input('Do you want to proceed?')
                }
            }

            stage('Build') {
                steps {
                    dir("FinalProject/k8s") {
                        sh "pwd"
                        sh "ls"
                        sh 'kubectl apply -f ./agricultor.yaml --validate=false'
                    }
                }
            }
        }
}